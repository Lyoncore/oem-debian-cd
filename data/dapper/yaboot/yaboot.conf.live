
# PowerPC subarch 
image=/casper/powerpc/vmlinux
	label=live
	alias=live-powerpc
	initrd=/casper/powerpc/initrd.gz
	append="boot=casper quiet splash --"
	initrd-size=1048576
	read-only

image=/casper/powerpc/vmlinux
	label=live-nosplash
	alias=live-nosplash-powerpc
	initrd=/casper/powerpc/initrd.gz
	append="boot=casper quiet --"
	initrd-size=1048576
	read-only

# PowerPC64 subarch
image[macrisc4]=/casper/powerpc64/vmlinux
	label=live
